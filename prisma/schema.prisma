generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model SentMessages {
  id      String   @id @default(uuid())
  number  String   @unique
  name    String
  message String   @db.Text
  sentAt  DateTime @default(now())

  @@map("sent_messages")
}

model Complaints {
  id        String   @id @default(uuid())
  name      String?
  means     String
  purpose   String
  number    String?
  location  String
  action    String
  gender    String
  ageGroup  String
  status    Status   @default(Em_Curso)
  createdAt DateTime @default(now())

  @@map("complaints")
}

